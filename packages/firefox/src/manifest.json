{
	"manifest_version": 3,
	"name": "FreshEyes",
	"description": "Adapts webpage for color blind people.",
	"author": "FreshEyes Team",
	"version": "1.4.0",
	"homepage_url": "https://github.com/fresh-eyes/fresh-eyes",
	"action": {
		"default_title": "FreshEyes",
		"default_popup": "popup.html",
		"default_icon": {
			"19": "img/icon16.png",
			"38": "img/icon48.png"
		}
	},
	"icons": {
		"128": "img/icon128.png",
		"48": "img/icon48.png",
		"32": "img/icon32.png",
		"16": "img/icon16.png"
	},
	"web_accessible_resources": [
		{
			"resources": ["img/filters.svg"],
			"matches": ["*://*/*"]
		}
	],
	"background": {
		"scripts": ["js/background.js"],
		"strict_min_version": "109.0"
	},
	"host_permissions": [
		"*://*/*"
	],
	"permissions": [
		"scripting",
		"activeTab"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "fresheyes@cadomac.dev"
		}
	}
}
