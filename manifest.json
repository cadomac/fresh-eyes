{
	"manifest_version": 3,
	"name": "FreshEyes",
	"description": "Adapts webpage for color blind people.",
	"author": {
		"email": "cdmacdonalddev@proton.me"
	},
	"version": "1.1",
	"homepage_url": "https://github.com/fresh-eyes/fresh-eyes",
	"action": {
		"default_title": "FreshEyes",
		"default_popup": "popup.html",
		"default_icon": {
			"19": "img/action_small.png",
			"38": "img/action.png"
		}
	},
	"icons": {
		"128": "img/icon.png",
		"48": "img/icon_small.png"
	},
	"web_accessible_resources": [
		{
			"resources": ["img/filters.svg"],
			"matches": ["<all_urls>"]
		}
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": [],
			"js": ["js/filters.js"]
		}
	],
	"optional_host_permissions": [
		"https://*/*",
		"http://*/*"
	],
	"permissions": [
		"tabs",
		"scripting",
		"activeTab"
	]
}
